from skimage.io import imread
from skimage.color import rgb2gray
from skimage.measure import label, regionprops
from skimage.segmentation import clear_border
import matplotlib.pyplot as plt

image_path = '/content/chro.bmp'
image = imread(image_path)


if len(image.shape) == 3:
    gray_image = rgb2gray(image)
else:
    gray_image = image

binary_image = gray_image > 0.5

labels_before = label(binary_image)

cleared_image = clear_border(binary_image)

labels_after = label(cleared_image)

objects_removed = len(regionprops(labels_before)) - len(regionprops(labels_after))

objects_removed

fig, axes = plt.subplots(1, 3, figsize=(15, 5))
axes[0].imshow(gray_image, cmap='gray')
axes[0].set_title('Original Grayscale Image')
axes[0].axis('off')

axes[1].imshow(binary_image, cmap='gray')
axes[1].set_title('Binary Image')
axes[1].axis('off')

axes[2].imshow(cleared_image, cmap='gray')
axes[2].set_title('Image After Clearing Border')
axes[2].axis('off')

plt.tight_layout()
plt.show()

